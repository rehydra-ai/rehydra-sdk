{
  "name": "rehydra",
  "version": "0.3.2",
  "description": "On-device PII anonymization module for high-privacy AI workflows",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "./dist/browser.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "imports": {
    "#storage": {
      "browser": "./dist/utils/storage.browser.js",
      "node": "./dist/utils/storage.js",
      "default": "./dist/utils/storage.js"
    },
    "#onnx-runtime": {
      "browser": "./dist/ner/onnx-runtime.browser.js",
      "node": "./dist/ner/onnx-runtime.js",
      "default": "./dist/ner/onnx-runtime.js"
    }
  },
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/browser.d.ts",
        "default": "./dist/browser.js"
      },
      "node": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    },
    "./node": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./storage/sqlite": {
      "node": {
        "types": "./dist/storage/sqlite.d.ts",
        "default": "./dist/storage/sqlite.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:browser-bundle": "bash scripts/test-browser-bundle.sh",
    "benchmark": "vitest bench",
    "benchmark:save": "mkdir -p benchmarks/history && vitest bench --run --outputJson=\"./benchmarks/history/$(date +%Y-%m-%d-%H%M%S).json\"",
    "test:gpu": "npx tsx scripts/test-gpu.ts",
    "test:gpu:compare": "npx tsx scripts/test-gpu.ts --compare",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "setup:ner": "bash scripts/setup-ner-model.sh --quantize",
    "setup:ner:standard": "bash scripts/setup-ner-model.sh",
    "setup:ner:upload": "bash scripts/setup-ner-model.sh --quantize --upload",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "anonymization",
    "pii",
    "privacy",
    "ner",
    "onnx"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rehydra-ai/rehydra-sdk.git"
  },
  "optionalDependencies": {
    "onnxruntime-node": "^1.17.0"
  },
  "peerDependencies": {
    "better-sqlite3": "^11.0.0",
    "onnxruntime-node": "^1.17.0",
    "onnxruntime-web": "^1.17.0"
  },
  "peerDependenciesMeta": {
    "onnxruntime-node": {
      "optional": true
    },
    "onnxruntime-web": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^2.1.0",
    "better-sqlite3": "^11.0.0",
    "eslint": "^8.55.0",
    "fake-indexeddb": "^6.2.5",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
