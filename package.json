{
  "name": "@elanlanguages/bridge-anonymization",
  "version": "0.2.0",
  "description": "On-device PII anonymization module for high-privacy translation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "setup:ner": "bash scripts/setup-ner-model.sh --quantize",
    "setup:ner:standard": "bash scripts/setup-ner-model.sh",
    "setup:ner:upload": "bash scripts/setup-ner-model.sh --quantize --upload",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "anonymization",
    "pii",
    "privacy",
    "ner",
    "onnx"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elanlanguages/bridge-anonymization.git"
  },
  "dependencies": {},
  "optionalDependencies": {
    "onnxruntime-node": "^1.17.0"
  },
  "peerDependencies": {
    "onnxruntime-node": "^1.17.0",
    "onnxruntime-web": "^1.17.0"
  },
  "peerDependenciesMeta": {
    "onnxruntime-node": {
      "optional": true
    },
    "onnxruntime-web": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^8.55.0",
    "fake-indexeddb": "^6.2.5",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}